#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int m1, m2, m3, m4, m5, total;
    float average;
    char name[50];
    fgets(name, sizeof(name), stdin); 
    scanf("%d%d%d%d%d",&m1,&m2,&m3,&m4,&m5);
    total = m1 + m2 + m3 + m4 + m5;
    average = total / 5.0; 
    printf("Name of the Student:%s",name);
    printf("Total marks:%d\n",total);
    printf("Average marks:%.1f\n",average);

    return 0;
}
