#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int a,b,c;
    scanf("%d%d%d",&a,&b,&c);
    if(a>b&&a>c){
        printf("Number1 is maximum with value of %d.0",a);
    }
    else if(b>a&&b>c){
        printf("Number2 is maximum with value of %d.0",b);
    }
    else{
        printf("Number3 is maximum with value of %d.0",c);
    }
    return 0;
}
