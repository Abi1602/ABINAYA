#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int side,length,width,base1,side2,base2;
    float radius;
    scanf("%d %d %d %f %d %d %d", &side,&length,&width,&radius,&base1,&side2,&base2);
    int perimeter_square=4*side;
    int perimeter_rectangle=2*(length+width);
    float perimeter_circle=2 * 3.141592653589793*radius;
    int perimeter_triangle=base1+side2+base2;
    printf("Perimeter of Square:%d\n",perimeter_square);
    printf("Perimeter of Rectangle:%d\n",perimeter_rectangle);
    printf("Perimeter of Circle:%.2f\n",floor(perimeter_circle*100)/100);
    printf("Perimeter of Triangle:%d\n",perimeter_triangle);

    return 0;
}
